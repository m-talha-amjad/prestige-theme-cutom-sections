
 <style>
  .shopify-section--simple-banner {
  position: relative;
}

.Banner--fullscreen {
  height: 100vh;
}

@supports (--css: variables) {
  .js .Banner--fullscreen {
    height: calc(var(--window-height) - (var(--header-height) * 0) - 0px);
    height: calc(var(--window-height) - (var(--header-height) * var(--header-is-not-transparent, 0)) - var(--announcement-bar-height, 0px));
    max-height: 100vh;
  }
}
/* Banner transition are handled in JavaScript, so while we use Flickity, we need to disable any transition */
.js .Banner__Carousel .Banner__Slide {
  transition: none;
}
.js .Banner__Carousel .Banner__Slide.is-selected {
  visibility: hidden;
}

.Banner__ImageContainer {
  height: 100%;
}

.Banner--fullscreen .Banner__Image {
  display: block;
  height: 100%;
  width: 100%;
  -o-object-fit: cover;
     object-fit: cover;
  -o-object-position: center;
     object-position: center;
  font-family: "object-fit: cover; object-position: center;";
  /* polyfill for IE */
}

.Banner__Image {
  z-index: 0;
}

@supports ((-o-object-fit: cover) or (object-fit: cover)) {
  .js .Banner__Image {
    opacity: 1;
  }
}
.Banner__Content {
  position: absolute;
  padding: 0 24px;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.Banner__Content--middleLeft,
.Banner__Content--bottomLeft {
  text-align: left;
}
.Banner__Content--middleLeft .ButtonGroup,
.Banner__Content--bottomLeft .ButtonGroup {
  justify-content: flex-start;
}

.Banner__Content--middleRight,
.Banner__Content--bottomRight {
  text-align: right;
}
.Banner__Content--middleRight .ButtonGroup,
.Banner__Content--bottomRight .ButtonGroup {
  justify-content: flex-start;
}

@media only screen and (max-width: 767px) {
  .Banner__Content--middleRight .ButtonGroup,
  .Banner__Content--bottomRight .ButtonGroup {
    justify-content: center;
  }
}

.Banner__Content--bottomLeft,
.Banner__Content--bottomCenter,
.Banner__Content--bottomRight {
  top: auto;
  bottom: 70px;
  left: 0;
  transform: none;
}

.js .Banner__Content .SectionHeader {
  opacity: 0;
}

.Banner__ScrollButton {
  position: absolute;
  left: calc(50% - 25px);
  bottom: -25px;
}

.Banner__Carousel--withScrollButton {
  margin-bottom: 25px;
}

.Banner--fullscreen .Banner__ScrollButton {
  bottom: 10px;
}
.Banner--fullscreen .Banner__Carousel--withScrollButton {
  max-height: calc(100% - 35px);
  margin-bottom: 0;
}

@media screen and (min-width: 1008px) {
  .Banner__Content {
    padding: 0px 70px 0px 0px;
  }
}
video {
  max-width: 100%;
  width: 100%;
}
@media screen and (min-width: 1008px){
  .Slideshow__Content {
    padding: 0 70px 0 70px;
}
}

/* testing poster fit */

.vid_poster_mobile img.Slideshow__Image.Image--lazyLoaded {
  position: absolute;
  top: 0px;
  z-index: 99999;
  object-fit: cover;
  height: 105%;
}
.vid_poster_desk img.Slideshow__Image.Image--lazyLoaded {
  position: absolute;
  top: 0px;
  z-index: 99999;
  object-fit: cover;
  height: 105%;
}
.video_wrapper_desktop {
  padding-top: 60%;
  height: 0;
}
.video_wrapper_desktop .desktop-video {
  position: absolute;
  top: 0;
  object-fit: cover;
  width: 100%;
}
.slideshow__cell--has-mobile-video .video_wrapper_mobile {
  display: none;
}
.vid_poster_desk.hideIt {
  visibility: hidden;
}
.vid_poster_desk {
  position: absolute;
  top: 0;
  width: 100%;
  background: #fff;
  /* opacity: 0; */
}
.vid_poster_mobile {
  display: none;
}
@media (max-width:45em) {
  .slideshow__cell--has-mobile-video .video_wrapper_desktop {
      display: none;
  }
  .slideshow__cell--has-mobile-video .video_wrapper_mobile {
      display: block;
  }
  .slideshow__image--desktop {
      display: none;
  }
  .video_wrapper_mobile {
      padding-top: 140%;
      height: 0;
  }
  .video_wrapper_mobile .mobile-video {
      position: absolute;
      top: 0;
      object-fit: cover;
      width: 100%;
      background: #fff;
  }
  .vid_poster_desk {
      display: none;
  }
  .vid_poster_mobile {
      display: block;
  }
  .vid_poster_mobile {
      position: absolute;
      top: 0;
      width: 100%;
       /* opacity: 0; */
  }
  .vid_poster_mobile.hideIt {
      visibility: hidden;
  }
}

.Banner__Slide.Carousel__Cell {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
}
.video_wrapper_desktop {
    position: relative;
    overflow: hidden;
}
.video_wrapper_desktop .desktop-video {
    z-index: 1;
}
.vid_poster_desk {
    z-index: 1;
}
.js .Banner__Content .SectionHeader {
    opacity: 1;
